{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "format", "lint", "prelint", "test"]
      }
    }
  },
  "targetDefaults": {
    "format": {
      "dependsOn": ["^format"]
    },
    "prelint": {
      "dependsOn": ["^prelint"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint", "prelint", "format"]
    },
    "build": {
      "dependsOn": ["lint"]
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
