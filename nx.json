{
  "namedInputs": {
    "eslintConfig": [
      "{projectRoot}/.eslintrc.js"
    ],
    "rootFiles": [
      "{projectRoot}/*.js",
      "{projectRoot}/*.ts",
      "{projectRoot}/*.json"
    ],
    "sourceFiles": [
      "{projectRoot}/src/*.js",
      "{projectRoot}/src/*.ts"
    ],
    "sourceOnlyFiles": [
      "{projectRoot}/src/*.js",
      "{projectRoot}/src/*.ts",
      "!{projectRoot}/src/*.test.js",
      "!{projectRoot}/src/*.test.ts"
    ],
    "typescriptConfig": [
      "{projectRoot}/tsconfig.json"
    ]
  },
  "targetDefaults": {
    "format": {
      "dependsOn": ["^format"],
      "inputs": [
        "eslintConfig",
        "rootFiles",
        "sourceFiles",
        "typescriptConfig"
      ]
    },
    "lint": {
      "dependsOn": ["^build", "^lint", "format"],
      "implicitDependencies": ["@actions-kit/dev"],
      "inputs": [
        "eslintConfig",
        "sourceFiles"
      ]
    },
    "build": {
      "dependsOn": ["^build", "lint"],
      "implicitDependencies": ["@actions-kit/dev"],
      "inputs": [
        "sourceOnlyFiles",
        "typescriptConfig"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "implicitDependencies": ["@actions-kit/dev"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "format", "lint", "test"]
      }
    }
  }
}
